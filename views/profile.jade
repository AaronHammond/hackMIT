

extends layout

block content
    form(action='/users/profile', method='post').form-signin
        h2.form-signin-heading Profile
        input(type='text', name='firstName', placeholder='First Name', class='input-block-level', value=profile.firstName)
        input(type='text', name='lastName', placeholder='Last Name', class='input-block-level', value=profile.lastName)
        input(type='text', name='hometown', placeholder='Hometown', class='input-block-level', value=profile.hometown)
        input(type='text', name='gender', placeholder='Gender', class='input-block-level', value=profile.gender)

        input(type='hidden', name='user-image', value=profile.image)#user-image
        image(src=profile.image, height=150, width=150, margin-left=10)
        | <br /> <br />
        a#img-btn Change Profile Picture...
        | <br /> <br />
        input(type='submit', class='btn btn-large btn-primary') Register

    script(type='text/javascript').
        $('#img-btn').on('click', function(){
            filepicker.pick(function(InkBlob){
                $('#user-image').val(InkBlob.url);
            });


        });



